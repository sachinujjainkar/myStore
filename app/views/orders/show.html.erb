<p id="notice"><%= notice %></p>

<div class="container-fluid">
   <h1>Order Details</h1>
   <hr>
   <div class="row">
    <div class="col-sm-4">
      <p>
        <strong>Customer name:</strong>
        <%= @order.user_id %>
      </p>
      <p>
        <strong>Order no:</strong>
        <%= @order.order_no %>
      </p>
      <p>
        <strong>Delivery date:</strong>
        <%= @order.delivery_date %>
      </p>
      <p>
        <strong>Special instruction:</strong>
        <%= @order.special_instruction %>
      </p>
    
      <p>
       <strong>Tracking number:</strong>
       <%= @order.tracking_number %>
      </p>
         
    </div>
    <div class="col-sm-4" >
      <p>
        <strong>Billing Address:</strong><br>
        <%= @order.address.line1 %><br>
        <%= @order.address.line2 %>,<br>
        <%= @order.address.line3 %>,<br>
        <%= @order.address.city%>,
        <%= @order.address.district %>,
        <%= @order.address.state %><br>
        <%= @order.address.country %>,
        <%= @order.address.zip_code %>
      </p>
    </div>
    <div class="col-sm-4" >
      <p>
        <strong>Shipping Address:</strong><br>
        <%= @order.address.line1 %><br>
        <%= @order.address.line2 %>,<br>
        <%= @order.address.line3 %>,<br>
        <%= @order.address.city%>,
        <%= @order.address.district %>,
        <%= @order.address.state %><br>
        <%= @order.address.country %>,
        <%= @order.address.zip_code %>
      </p> 
    </div>
   </div>
  
  <br>
  <hr>
  <div>

  <% i=0 %> 
  <% @ProductTotal=0 %>
  <% @OrderTotal=0 %>
  <% @order.order_products.each do |order| %>
    <h4>Product <%= i+=1 %> </h4>
    <strong>Name: </strong><%= order.product.name %><br>
    <strong>Description: </strong><%= order.product.description %><br>
    <strong>Quantity: </strong><%= order.quntity %><br>
    <strong>Unit price: </strong><%= "#{order.product.price.to_f} INR"%><br>
    <% @ProductTotal=order.product.price * order.quntity %>
    <strong>Total price: </strong><%= "#{@ProductTotal.to_f} INR"%><br>  
    <% @OrderTotal+=@ProductTotal %>
    <br>
  <% end %>
  <br>
  <strong>Total Product Price: </strong><%= @OrderTotal.to_f %><br>
  </p>

  </div>


  <hr>
  <div align=right>
    <p>
      <strong>Total:</strong>
      <%= @OrderTotal.to_f %>
    </p>
    <p>
      <strong>Order Discount:</strong>
      <%= "- #{@OrderTotal * (@order.discount / 100.0)} (#{@order.discount} %)"%>
 
    </p>
    
    <p>
    <%= %>
     
    </p>

      <h4><b>Sub Total:
      <%= @OrderTotal - ( @OrderTotal * (@order.discount / 100.0)) %> 
      <% @order.order_total = @OrderTotal%>
      </b> </h4>
  </div>
  <hr>
  <div>
    <h4><b>Log</b><h4>
    <p>
      <strong>Created at:</strong>
      <%= @order.created_at %>
    </p>
    <p>
      <strong> Updated at:</strong>
      <%= @order.updated_at %>
    </p>
    <p>
      updated
      <%= distance_of_time_in_words(@order.created_at, @order.updated_at)  %>
    </p>
  </div>
  <br>
 
   
  <button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-print"></span>
    <%= link_to 'Print Invoice', order_path(@order,format:"pdf") %>
  </button>

  <button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-edit"></span> 
    <%= link_to 'Edit Order', edit_order_path(@order) %> 
  </Button>

  <button type="button" class="btn btn-default btn-sm">
    <span class="glyphicon glyphicon-backward"></span>
    <%= link_to 'Back', orders_path %></Button>
  </button>

  </div>
